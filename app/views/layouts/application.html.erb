  <div id="container">
    <header>
        <span id="logo">schdl me</span>
    </header>
    <div id="main" role="main">
      <% if user_signed_in? %>
         <%= current_user.email %> | <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>        
      <% else %>
        <%= link_to 'Login with Google', user_omniauth_authorize_path(:google_hybrid) %>  
      <% end %>
      <%= yield %>
    </div>
    <footer>

    </footer>
  </div> <!--! end of #container -->


  <!-- JavaScript at the bottom for fast page loading -->


