<% content_for :additional_styles do %>
	<link rel='stylesheet' type='text/css' href='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/themes/base/jquery-ui.css' />
	<link rel='stylesheet' type='text/css' href='/stylesheets/jquery.weekcalendar.css' />
	<link rel='stylesheet' type='text/css' href='/stylesheets/new.css' />
<% end %>

<% content_for :additional_scripts do %>
    <script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js'></script>
	<script type="text/javascript" src="/javascripts/date.js"></script>
	<script type='text/javascript' src='/javascripts/jquery.weekcalendar.js'></script>
	<script type='text/javascript' src='/javascripts/new.js'></script>
<% end %>

<h1>Drag in the calendar to indicate your availability</h1>
<% form_for @meeting do |meeting_form| %>
  <div id="avail_fields">
  <br />
  <% for availability in @meeting.availabilities %>
    <%= meeting_form.fields_for :availabilities do |avail_form| %>
      Start: <%= avail_form.text_field :start %> <br />
      End: <%= avail_form.text_field :end %> <br />
      Duration: <%= avail_form.text_field :duration %> <br />
    <% end %>
  <% end %>
  </div>
  <a href="#" id="new_avail">+Add timeslot</a>
  <br />
  <br /> <%= meeting_form.submit %>
<% end %>
<div id='calendar'></div>
